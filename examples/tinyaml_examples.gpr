with "../tinyaml.gpr";

project Tinyaml_Examples is

   for Source_Dirs use (".");
   for Object_Dir use "../obj/examples";
   for Exec_Dir use "../bin";
   for Create_Missing_Dirs use "True";

   for Main use ("basic_parsing.adb",
                 "with_validation.adb",
                 "error_handling.adb");

   package Compiler is
      for Default_Switches ("Ada") use
        ("-gnat2022",
         "-gnata",
         "-g");
   end Compiler;

end Tinyaml_Examples;
